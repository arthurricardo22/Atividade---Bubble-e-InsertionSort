#include <stdio.h>
#include <string.h>

int main() {
    char nomes[5][20] = {"Arthur", "Bruna", "Carlos", "Daniela", "Beatriz"};
    int n = 5;

    // BubbleSort crescente
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (strcmp(nomes[j], nomes[j + 1]) > 0) { // crescente
                char temp[20];
                strcpy(temp, nomes[j]);
                strcpy(nomes[j], nomes[j + 1]);
                strcpy(nomes[j + 1], temp);
            }
        }
    }

    printf("BubbleSort Crescente:\n");
    for (int i = 0; i < n; i++) {
        printf("%s\n", nomes[i]);
    }

    // BubbleSort decrescente
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (strcmp(nomes[j], nomes[j + 1]) < 0) { // decrescente
                char temp[20];
                strcpy(temp, nomes[j]);
                strcpy(nomes[j], nomes[j + 1]);
                strcpy(nomes[j + 1], temp);
            }
        }
    }

    printf("\nBubbleSort Decrescente:\n");
    for (int i = 0; i < n; i++) {
        printf("%s\n", nomes[i]);
    }

    return 0;
}
